@using AvsarGame.Portal.Core
@model List<AvsarGame.API.Models.UserPaymentManagementModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h4 class="c-grey-900 mT-10 mB-30">Ödeme Bildirimleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Kullanıcı Id</th>
                            <th>Adı</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0) {
                            @foreach (var item in Model) {
                                <tr>
                                    <td>@item.UserId</td>
                                    <td>@item.Name @item.Surname</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        <a data-toggle="modal" href="#@PageHelper.GetModalId("request",new Guid(item.UserId))" class="btn btn-success btn-sm">Kontrol Et</a>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
                @if (Model != null && Model.Count > 0) {
                    @foreach (var item in Model) {
                        <div class="modal fade" id="@PageHelper.GetModalId("request",new Guid(item.UserId))" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">@item.Name @item.Surname Ödeme Bildirimi</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <table class="table table-striped table-bordered requestModal" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>Tarih</th>
                                                    <th>Banka</th>
                                                    <th>Tip</th>
                                                    <th>Miktar</th>
                                                    <th>İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tbody>
                                                    @foreach (var request in item.PaymentRequests)
                                                    {
                                                        <tr>
                                                            <td>@request.Date</td>
                                                            <td>@request.Bank</td>
                                                            <td>@request.PrimitivePaymentType</td>
                                                            <td>@request.Amount</td>
                                                            <td>
                                                                <button data-user-id="@request.UserId" data-request-id="@request.Id"  class="btn btn-success accept">Kabul Et</button>
                                                                <button data-user-id="@request.UserId" data-request-id="@request.Id"  class="btn btn-danger reject">Reddet</button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" id="close" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {

        $('#dataTable').DataTable();

        $("#save").click(function(e) {
            var model = new FormData(); // you can consider this as 'data bag'
            model.append('Image', $('#Image')[0].files[0]);
            model.append('Name', $('#Name').val());
            model.append('Description', $('#Description').val());
            model.append('ImageUrl', $('#imageUrl').val());
            model.append('Id', $(this).attr('data-id'));

            $.ajax({
                type: 'post',
                url: '/Admin/Category/Save',
                processData: false,
                contentType: false,
                data: model,
                success: function(response) {
                    swal("Basarili!", "Kayıt Eklendi", "success");
                    setTimeout(function() {
                        location.reload()
                    }, 1000);
                },
                error: function(err) {
                    alert("Bir Hata oluştu");
                }
            });
        });

        $(".requestModal .accept").click(function() {
            debugger;
            var UserId = $(this).attr('data-user-id');
            var RequestId = $(this).attr('data-request-id');
            var modal = "request" + UserId;
            $("#" + modal).css("display", "none");
            var row = this.parentElement.parentElement;

            var model = {
                UserId,
                RequestId
            }
            swal({
                    title: "Ödemeyi Onaylamak istediginizden emin misiniz?",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "evet",
                    cancelButtonText: "Hayir",
                    closeOnConfirm: true,
                    closeOnCancel: true
                },
                function(isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            type: "POST",
                            url: '/Admin/UserPaymentManagement/Approve',
                            content: "application/json; charset=utf-8",
                            data: model,
                            dataType: 'json',
                            success: function(res) {
                                if (res.success) {
                                    if (res.data.isSuccess) {
                                        debugger
                                        swal("Basarili!", "Ödeme Onaylandı", "success");
                                        row.remove();
                                        $("#" + modal).css("display", "block");
                                    } else {
                                        swal("Hata!", "Ödeme Onaylanamadı", "error");
                                        $("#" + modal).css("display", "block");
                                    }
                                }
                            },
                            error: function(err) {
                                alert("Beklenmeyen Bir hata oluştu");
                                $("#" + modal).css("display", "block");
                            }
                        });
                    } else {
                        swal.close();
                        $("#" + modal).css("display", "block");
                    }
                });
        });

        $("#close").click(function(e) {
            location.reload();
        });
    });
</script>
