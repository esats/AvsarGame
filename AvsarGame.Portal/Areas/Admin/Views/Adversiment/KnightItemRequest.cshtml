@using AvsarGame.Portal.Core
@model List<BaseAdversimentModel<KnightItemAddversimentModel, UserSummaryModel>>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h4 class="c-grey-900 mT-10 mB-30">Knight Online Cyber Ring İlan Talepleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Adı</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Fiyat</th>
                            <th>Resimler</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0) {
                            @foreach (var item in Model) {
                                <tr class="requestrow">
                                    <td>@item.Sub.Name @item.Sub.Surname</td>
                                    <td>@item.Sub.Email</td>
                                    <td>@item.Sub.PhoneNumber</td>
                                    <td>@item.Base.Title</td>
                                    <td>
                                        <textarea cols="12" rows="6">@item.Base.Content</textarea>
                                    </td>
                                    <td>@item.Base.Price</td>
                                    <td>
                                        <ul style="list-style: none;">
                                            @foreach (var url in item.Base.FileUrls) {
                                                var u = "https://anatoliagm.blob.core.windows.net/uploads/200x175/" + url;

                                                <li>
                                                    <img src="@u" style="width: 100px; margin: 4px; display: inline;"/>
                                                </li>
                                            }
                                        </ul>
                                    </td>
                                    <td>
                                        <a class="btn btn-success btn-sm accept" data-add-id="@item.Base.Id" data-user-id="@item.Sub.UserId" style="margin-bottom: 10px; color: white">Kabul et</a>
                                        <a class="btn btn-danger btn-sm reject" data-add-id="@item.Base.Id" data-user-id="@item.Sub.UserId" style="color: white">Reddet</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {

        $('#dataTable').DataTable({
            "scrollX": true
        });

        $(".requestrow .accept").click(function() {
            debugger;
            var UserId = $(this).attr('data-user-id');
            var AddversimentId = $(this).attr('data-add-id');

            var row = this.parentElement.parentElement;

            var model = {
                AddversimentId,
                UserId
            }

            swal({
                    title: "İlanı kabul etmek istediğinizden Emin misiniz?",
                    showCancelButton: true,
                    confirmButtonColor: "#4caf50",
                    confirmButtonText: "evet",
                    cancelButtonText: "Hayir",
                    closeOnConfirm: true,
                    closeOnCancel: true
                },
                function(isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            type: "POST",
                            url: '/Admin/Adversiment/ApproveKnightItem',
                            content: "application/json; charset=utf-8",
                            data: model,
                            dataType: 'json',
                            beforeSend: function() {
                                showSpinner();
                            },
                            complete: function() {
                                hideSpinner();
                            },
                            success: function(res) {
                                if (res.success) {
                                    if (res.data.isSuccess) {
                                        swal("Basarili!", "İlan yayınlandı", "success");
                                        row.remove();
                                    } else {
                                        swal("Hata!", "İlan yayınlandı", "error");
                                    }
                                }
                            },
                            error: function(err) {
                                alert("Beklenmeyen Bir hata oluştu");
                            }
                        });
                    } else {
                        swal.close();
                    }
                });
        });

        $(".requestrow .reject").click(function() {
            var UserId = $(this).attr('data-user-id');
            var AddversimentId = $(this).attr('data-add-id');

            var row = this.parentElement.parentElement;

            var model = {
                AddversimentId,
                UserId
            }

            swal({
                    title: "ilanı Red etmek istediginizden emin misiniz?",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "evet",
                    cancelButtonText: "Hayir",
                    closeOnConfirm: true,
                    closeOnCancel: true
                },
                function(isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            type: "POST",
                            url: '/Admin/Adversiment/RejectKnightItem',
                            content: "application/json; charset=utf-8",
                            data: model,
                            dataType: 'json',
                            beforeSend: function() {
                                showSpinner();
                            },
                            complete: function() {
                                hideSpinner();
                            },
                            success: function(res) {
                                if (res.success) {
                                    if (res.data.isSuccess) {
                                        swal("Basarili!", "ilan Reddedildi", "success");
                                        row.remove();
                                    } else {
                                        swal("Hata!", "ilan Reddilemedi", "error");
                                    }
                                }
                            },
                            error: function(err) {
                                alert("Beklenmeyen Bir hata oluştu");
                            }
                        });
                    } else {
                        swal.close();
                    }
                });
        });

    });
</script>