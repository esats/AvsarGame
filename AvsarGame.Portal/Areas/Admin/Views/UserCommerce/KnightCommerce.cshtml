@using AvsarGame.Portal.Core
@model List<GetCommerceRequestDetailModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h4 class="c-grey-900 mT-10 mB-30">Knight Online İtem ve ring ticaret talepleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Oyun Adı</th>
                            <th>İlan Adı</th>
                            <th>Satıcı</th>
                            <th>Alıcı</th>
                            <th>Fiyatı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0) {
                            @foreach (var item in Model) {
                                <tr class="requestrow">
                                    <td> @item.GameName</td>
                                    <td> @item.Title</td>
                                    <td> @item.Seller</td>
                                    <td> @item.Buyer</td>
                                    <td> @item.GameName</td>
                                    <td>
                                        <a class="btn btn-success btn-sm accept" style="margin-bottom: 10px; color: white">İşlem tamamlandı</a>
                                        <a class="btn btn-danger btn-sm reject" style="margin-bottom: 10px; color: white">İşlem yapılamadı</a>
                                        <a class="btn btn-info btn-sm accept" style="margin-bottom: 10px; color: white">Satıcı Sms Gönder</a>
                                        <a class="btn btn-info btn-sm accept" style="margin-bottom: 10px; color: white">Alıcıya Sms Gönder</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $('#dataTable').DataTable({
            "scrollX": true
        });

        $(".requestrow .accept").click(function () {
            var UserId = $(this).attr('data-user-id');
            var AddversimentId = $(this).attr('data-add-id');

            var row = this.parentElement.parentElement;

            var model = {
                AddversimentId,
                UserId
            }

            swal({
                title: "İlanı kabul etmek istediğinizden Emin misiniz?",
                showCancelButton: true,
                confirmButtonColor: "#4caf50",
                confirmButtonText: "evet",
                cancelButtonText: "Hayir",
                closeOnConfirm: true,
                closeOnCancel: true
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            type: "POST",
                            url: '/Admin/Adversiment/ApproveKnightItem',
                            content: "application/json; charset=utf-8",
                            data: model,
                            dataType: 'json',
                            beforeSend: function () {
                                showSpinner();
                            },
                            complete: function () {
                                hideSpinner();
                            },
                            success: function (res) {
                                if (res.success) {
                                    if (res.data.isSuccess) {
                                        swal("Basarili!", "İlan yayınlandı", "success");
                                        row.remove();
                                    } else {
                                        swal("Hata!", "İlan yayınlandı", "error");
                                    }
                                }
                            },
                            error: function (err) {
                                alert("Beklenmeyen Bir hata oluştu");
                            }
                        });
                    } else {
                        swal.close();
                    }
                });
        });

    });
</script>