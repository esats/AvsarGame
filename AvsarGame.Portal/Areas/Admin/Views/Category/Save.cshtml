@model AvsarGame.API.Models.CategoryModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row gap-20 masonry pos-r" style="position: relative; height: 1072.6px;">
    <div class="masonry-sizer col-md-12"></div>
    <div class="masonry-item col-md-12" style="position: absolute; left: 0%; top: 0px;">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Kategoriler</h6>
            <div class="mT-29">
                <form asp-action="Save" asp-controller="Category" method="post">
                    <div class="form-group">
                        <label asp-for="Name">Kategori Adı</label>
                        <input type="text" asp-for="Name" class="form-control">
                        <small asp-for="Name" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Açıklama</label>
                        <input type="text" asp-for="Description
                               " class="form-control">
                        <small asp-for="" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image">Resim</label>
                        <input type="file" asp-for="Image" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>