@model List<AvsarGame.API.Models.GameModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="page-wrapper">
    <main class="Main">
        <div class="container">
            <div class="title-primary">Sepetim</div>
            <div class="section">
                <div class="row">
                    <div class="col-12">
                        <div class="table-container">
                            <table class="table table-dark responsive-table cart-table total-table">
                                <thead>
                                    <tr>
                                        <th scope="col">Ürünler</th>
                                        <th scope="col">Ürün Adı</th>
                                        <th scope="col">Miktar</th>
                                        <th scope="col">Fiyat</th>
                                        <th scope="col">Toplam</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td data-heading="Ürünler"><img src="/Uploads/@item.ImageUrl" alt=""></td>
                                            <td scope="row" data-heading="Ürün Adı">@item.Name</td>
                                            <td data-heading="Miktar">
                                                <div class="counter-container">
                                                    <input class="count" style="font-weight: bold; width: 20%" value="1" />
                                                </div>
                                            </td>
                                            <td data-heading="Fiyat">@item.SellPrice</td>
                                            <td data-heading="Toplam">240 TL</td>
                                        </tr>
                                    }
                                    <tr class="total-amount">
                                        <td colspan="3" scope="col" data-heading="Ürünler">Toplam Tutar:</td>
                                        <td colspan="2" scope="col" data-heading="Ürün Adı">960 TL</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <button id="payment-button" type="submit" class="button btn-blue ml-auto">
                    Alışverişi Tamamla
                </button>
            </div>
        </div>
    </main>
</div>

