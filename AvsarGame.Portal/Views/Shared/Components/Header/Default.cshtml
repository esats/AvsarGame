@using AvsarGame.Core
@using AvsarGame.Portal.Core
@model List<AvsarGame.API.Models.GameModel>

<div class="col-12 col-md-6 col-lg-2 col-md-2 mb-4 mb-lg-0">
    <h5 class="dropdown-title list-title led led-below">
    </h5>
    @foreach (var game in Model.Take(4)) {
        <a class="dropdown-item list-item hoverOn" data-url="@PageHelper.GetImageUrl(game.ImageUrl,ImageFolder.LARGE_MAIN)" href="/oyun/@game.CategoryName/@game.CategoryName">@game.Name</a>
    }
</div>
<div class="col-12 col-md-6 col-lg-2 col-md-2 mb-4 mb-lg-0">
    <h5 class="dropdown-title list-title led led-below">
  </h5>
    @foreach (var game in Model.Skip(4).Take(4)) {
        <a class="dropdown-item list-item hoverOn" data-url="@PageHelper.GetImageUrl(game.ImageUrl,ImageFolder.LARGE_MAIN)"  href="/oyun/@game.CategoryName">@game.Name</a>
    }
</div>
<div class="col-12 col-md-6 col-lg-2 col-md-2 mb-4 mb-lg-0">
    <h5 class="dropdown-title list-title led led-below">
        </h5>
    @foreach (var game in Model.Skip(8).Take(4)) {
        <a class="dropdown-item list-item hoverOn" data-url="@PageHelper.GetImageUrl(game.ImageUrl,ImageFolder.LARGE_MAIN)"  href="/oyun/@game.CategoryName">@game.Name</a>
    }
</div>

<div class="col-12 col-md-6 offset-lg-1 col-lg-5 mb-4 mb-lg-0">
    <div class="d-flex dropdown-image">
        <div class="col-12 p-0">
            <img class="dropdown-image-img" id = "headerCategoryImg"
                 alt=""/>
        </div>
    </div>
</div>

<script>
    $( document ).ready(function() {
        $(".hoverOn").hover(function() {
           var url =  $(this).attr("data-url");
           $("#headerCategoryImg").attr("src",url);
           console.log($("#headerCategoryImg"))
        });
    });
   
</script>